<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.yskj.dao.RoleDao" ><!-- 查询字段 --><sql id="columnList" >	sr.id,	 sr.name, sr.createBy, sr.createTime, sr.updateBy, sr.updateTime, sr.version, sr.isDeleted, sr.status, sr.description</sql><!--通过id集合in查询--><sql id="inClause">    <if test="column!=null">        <if test="ids==null">            and 1=0        </if>        <if test="ids!=null">            <if test="ids.size>0">                and  sr.${column} in                <foreach item="items" index="index" collection="ids" open="(" separator="," close=")">                    #{items}                </foreach>            </if>            <if test="ids.size==0">                and 1=0            </if>        </if>    </if></sql><!-- 查询条件 --><sql id="whereClause">where 1=1<trim  suffixOverrides="," >	<if test="condition.id != null" >	    and sr.id = #{condition.id}	</if>	<if test="condition.name != null" >and  sr.name = #{condition.name}</if><if test="condition.createBy != null" >and  sr.createBy = #{condition.createBy}</if><if test="condition.createTime != null" >and  sr.createTime = #{condition.createTime}</if><if test="condition.updateBy != null" >and  sr.updateBy = #{condition.updateBy}</if><if test="condition.updateTime != null" >and  sr.updateTime = #{condition.updateTime}</if><if test="condition.version != null" >and  sr.version = #{condition.version}</if><if test="condition.isDeleted != null" >and  sr.isDeleted = #{condition.isDeleted}</if><if test="condition.status != null" >and  sr.status = #{condition.status}</if><if test="condition.description != null" >and  sr.description = #{condition.description}</if>	<include refid="inClause"/></trim></sql><!-- 模糊查询条件 --><sql id="whereLikeClause">where 1=1<trim  suffixOverrides="," >	<if test="condition.id != null" >	    and sr.id = #{condition.id}	</if>													 			<if test="condition.name != null" >and  UPPER(sr.name) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.name}),'%'))</if><if test="condition.createBy != null" >and  UPPER(sr.createBy) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.createBy}),'%'))</if><if test="condition.createTime != null" >and  UPPER(sr.createTime) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.createTime}),'%'))</if><if test="condition.updateBy != null" >and  UPPER(sr.updateBy) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.updateBy}),'%'))</if><if test="condition.updateTime != null" >and  UPPER(sr.updateTime) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.updateTime}),'%'))</if><if test="condition.version != null" >and  UPPER(sr.version) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.version}),'%'))</if><if test="condition.isDeleted != null" >and  UPPER(sr.isDeleted) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.isDeleted}),'%'))</if><if test="condition.status != null" >and  UPPER(sr.status) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.status}),'%'))</if><if test="condition.description != null" >and  UPPER(sr.description) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.description}),'%'))</if>	<include refid="inClause"/></trim></sql><!-- 插入记录 --><insert id="add"  >  insert into shiro_role (id,name,createBy,createTime,updateBy,updateTime,version,isDeleted,status,description)  values(#{id,jdbcType=VARCHAR},#{name},#{createBy},#{createTime},#{updateBy},#{updateTime},#{version},#{isDeleted},#{status},#{description})</insert><!-- 修改记录，只修改只不为空的字段 --><update id="update" >	update shiro_role set	<trim  suffixOverrides="," >	<if test="name != null ">name=#{name},</if><if test="createBy != null ">createBy=#{createBy},</if><if test="createTime != null ">createTime=#{createTime},</if><if test="updateBy != null ">updateBy=#{updateBy},</if><if test="updateTime != null ">updateTime=#{updateTime},</if><if test="version != null ">version=#{version},</if><if test="isDeleted != null ">isDeleted=#{isDeleted},</if><if test="status != null ">status=#{status},</if><if test="description != null ">description=#{description},</if>	</trim> where id=#{id} and version = #{version}-1</update><!-- 删除记录 --><delete id="del" >	delete from shiro_role where id = #{id} and version = #{version}</delete><!-- 根据id查询  --><select id="get"   resultType="Role"  parameterType="String">	select <include refid="columnList" /> 	from shiro_role  sr	where  sr.id = #{id}</select><!-- 列表总数--><select id="count" resultType="java.lang.Long" >	select count(1) 	from shiro_role  sr	<include refid="whereClause"/></select><!-- 查询page --><select id="findPage" resultType="Role" >	select 	<include refid="columnList"/>	from shiro_role sr	<include refid="whereClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 模糊查询page --><select id="findLikePage" resultType="Role" >	select 	<include refid="columnList"/>	from shiro_role sr	<include refid="whereLikeClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询列表list --><select id="findList" resultType="Role" >	select	<include refid="columnList"/>	from shiro_role sr	<include refid="whereClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!--模糊查询list--><select id="findLikeList" resultType="Role" >	select	<include refid="columnList"/>	from shiro_role sr	<include refid="whereLikeClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询符合条件的数据的id集合 --><select id="findIds" resultType="String">	select sr.id	from shiro_role sr    <include refid="whereClause"/>    <if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询符合模糊条件的数据的id集合 --><select id="findLikeIds" resultType="String">	select sr.id	from shiro_role sr    <include refid="whereLikeClause"/>    <if test="orderByClause!=null">${orderByClause}</if></select><!-- 获取一个对象通过非id --><select id="one" resultType="Role" >     select    <include refid="columnList"/>     from shiro_role sr    <include refid="whereClause"/>    <if test="orderByClause!=null">${orderByClause}</if>    limit 0,1</select><!--如果你想返回一个HashMap 就实现这个select标签--><select id="queryHashMap" resultType="java.util.HashMap"  parameterType="Object"></select>	<select id="findRolesByAccountNo"  resultType="Role"   parameterType="String">		select r.name,r.id from shiro_user u		left join shiro_userRole ur on u.id = ur.userId		left join shiro_role r on r.id = ur.roleId		where  u.accountNo =  #{accountNo}	</select></mapper>