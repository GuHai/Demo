<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.yskj.dao.RecommendDao" ><!-- 查询字段 --><sql id="columnList" >	pr.id,	 pr.name, pr.phoneNumber, pr.sex, pr.age, pr.mark, pr.createBy, pr.createTime, pr.updateBy, pr.updateTime, pr.version, pr.isDeleted</sql><!--通过id集合in查询--><sql id="inClause">    <if test="column!=null">        <if test="ids==null">            and 1=0        </if>        <if test="ids!=null">            <if test="ids.size>0">                and  pr.${column} in                <foreach item="items" index="index" collection="ids" open="(" separator="," close=")">                    #{items}                </foreach>            </if>            <if test="ids.size==0">                and 1=0            </if>        </if>    </if></sql><!-- 查询条件 --><sql id="whereClause">where 1=1<trim  suffixOverrides="," >	<if test="condition.id != null" >	    and pr.id = #{condition.id}	</if>	<if test="condition.name != null" >and  pr.name = #{condition.name}</if><if test="condition.phoneNumber != null" >and  pr.phoneNumber = #{condition.phoneNumber}</if><if test="condition.sex != null" >and  pr.sex = #{condition.sex}</if><if test="condition.age != null" >and  pr.age = #{condition.age}</if><if test="condition.mark != null" >and  pr.mark = #{condition.mark}</if><if test="condition.createBy != null" >and  pr.createBy = #{condition.createBy}</if><if test="condition.createTime != null" >and  pr.createTime = #{condition.createTime}</if><if test="condition.updateBy != null" >and  pr.updateBy = #{condition.updateBy}</if><if test="condition.updateTime != null" >and  pr.updateTime = #{condition.updateTime}</if><if test="condition.version != null" >and  pr.version = #{condition.version}</if><if test="condition.isDeleted != null" >and  pr.isDeleted = #{condition.isDeleted}</if></trim><include refid="inClause"/></sql><!-- 模糊查询条件 --><sql id="whereLikeClause">where 1=1<trim  suffixOverrides="," >	<if test="condition.id != null" >	    and pr.id = #{condition.id}	</if>													 			<if test="condition.name != null" >and  UPPER(pr.name) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.name}),'%'))</if><if test="condition.phoneNumber != null" >and  UPPER(pr.phoneNumber) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.phoneNumber}),'%'))</if><if test="condition.sex != null" >and  UPPER(pr.sex) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.sex}),'%'))</if><if test="condition.age != null" >and  UPPER(pr.age) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.age}),'%'))</if><if test="condition.mark != null" >and  UPPER(pr.mark) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.mark}),'%'))</if><if test="condition.createBy != null" >and  UPPER(pr.createBy) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.createBy}),'%'))</if><if test="condition.createTime != null" >and  UPPER(pr.createTime) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.createTime}),'%'))</if><if test="condition.updateBy != null" >and  UPPER(pr.updateBy) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.updateBy}),'%'))</if><if test="condition.updateTime != null" >and  UPPER(pr.updateTime) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.updateTime}),'%'))</if><if test="condition.version != null" >and  UPPER(pr.version) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.version}),'%'))</if><if test="condition.isDeleted != null" >and  UPPER(pr.isDeleted) LIKE   UPPER(CONCAT(CONCAT('%',#{condition.isDeleted}),'%'))</if></trim><include refid="inClause"/></sql><!-- 插入记录 --><insert id="add"  >  insert into post_recommend (id,name,phoneNumber,sex,age,mark,createBy,createTime,updateBy,updateTime,version,isDeleted)  values(#{id,jdbcType=VARCHAR},#{name},#{phoneNumber},#{sex},#{age},#{mark},#{createBy},#{createTime},#{updateBy},#{updateTime},#{version},#{isDeleted})</insert><!-- 修改记录，只修改只不为空的字段 --><update id="update" >	update post_recommend set	<trim  suffixOverrides="," >	<if test="name != null ">name=#{name},</if><if test="phoneNumber != null ">phoneNumber=#{phoneNumber},</if><if test="sex != null ">sex=#{sex},</if><if test="age != null ">age=#{age},</if><if test="mark != null ">mark=#{mark},</if><if test="createBy != null ">createBy=#{createBy},</if><if test="createTime != null ">createTime=#{createTime},</if><if test="updateBy != null ">updateBy=#{updateBy},</if><if test="updateTime != null ">updateTime=#{updateTime},</if><if test="version != null ">version=#{version},</if><if test="isDeleted != null ">isDeleted=#{isDeleted},</if>	</trim> where id=#{id} and version = #{version}-1</update><!-- 删除记录 --><delete id="del" >	delete from post_recommend where id = #{id}</delete><!-- 根据id查询  --><select id="get"   resultType="Recommend"  parameterType="String">	select <include refid="columnList" /> 	from post_recommend  pr	where  pr.id = #{id}  and pr.isDeleted = false</select><!-- 列表总数--><select id="count" resultType="java.lang.Long" >	select count(1) 	from post_recommend  pr	<include refid="whereClause"/></select><!-- 查询page --><select id="findPage" resultType="Recommend" >	select 	<include refid="columnList"/>	from post_recommend pr	<include refid="whereClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 模糊查询page --><select id="findLikePage" resultType="Recommend" >	select 	<include refid="columnList"/>	from post_recommend pr	<include refid="whereLikeClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询列表list --><select id="findList" resultType="Recommend" >	select	<include refid="columnList"/>	from post_recommend pr	<include refid="whereClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!--模糊查询list--><select id="findLikeList" resultType="Recommend" >	select	<include refid="columnList"/>	from post_recommend pr	<include refid="whereLikeClause"/>	<if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询符合条件的数据的id集合 --><select id="findIds" resultType="String">	select pr.${idsColumn}	from post_recommend pr    <include refid="whereClause"/>    <if test="orderByClause!=null">${orderByClause}</if></select><!-- 查询符合模糊条件的数据的id集合 --><select id="findLikeIds" resultType="String">	select pr.${idsColumn}	from post_recommend pr    <include refid="whereLikeClause"/>    <if test="orderByClause!=null">${orderByClause}</if></select><!-- 获取一个对象通过非id --><select id="one" resultType="Recommend" >     select    <include refid="columnList"/>     from post_recommend pr    <include refid="whereClause"/>    <if test="orderByClause!=null">${orderByClause}</if>    limit 0,1</select><!--如果你想返回一个HashMap 就实现这个select标签--><select id="queryHashMap" resultType="java.util.HashMap"  parameterType="Object"></select></mapper>